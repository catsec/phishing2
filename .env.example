# Example environment variables for phishing-demo
# Copy this file to .env and replace with your actual credentials

# Twilio credentials for SMS functionality
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# SMS sender configuration
DEFAULT_FROM_NUMBER=BANK
DEFAULT_SMS_MESSAGE=This is a test message from your bank. Please check your account at http://localhost:9999

# Company name in Hebrew (displayed in phishing pages)
COMPANY_HEBREW=בנק

# Admin credentials for hacker dashboard
ADMIN_USERNAME=admin
ADMIN_PASSWORD=password

# Application configuration
PORT=9999
FLASK_DEBUG=false

# HTTPS proxy configuration (set to true if using Nginx Proxy Manager or similar)
BEHIND_HTTPS_PROXY=false

# Optional: Default "To" number for SMS form (defaults to +9725 if not set)
DEFAULT_TO_NUMBER=+9725
